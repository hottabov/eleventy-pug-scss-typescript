{
  "name": "eleventy-pug-scss-typescript-kit",
  "version": "1.0.0",
  "keywords": [],
  "author": "Vadym Leonov",
  "license": "ISC",
  "description": "Eleventy/PUG/SCSS/TypeScrypt website template with a blog",
  "type": "module",
  "scripts": {
    "clean": "rimraf public",
    "watch:sass": "sass --watch src/scss:public/css",
    "build:sass": "sass src/scss:public/css && npm run minify:css",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "minify:css": "postcss public/css/*.css --no-map --replace",
    "minify:js": "terser public/js/script.js --compress --mangle --output public/js/script.js",
    "watch:eleventy": "eleventy --serve",
    "build:eleventy": "NODE_ENV=production eleventy",
    "start": "npm-run-all clean build:sass build:ts --parallel watch:ts watch:sass watch:eleventy",
    "build": "npm-run-all clean build:sass build:ts build:eleventy minify:js"
  },
  "main": "eleventy.config.js",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.0",
    "@11ty/eleventy-img": "^5.0.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-pug": "^1.0.0",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "@types/node": "^22.15.21",
    "css-declaration-sorter": "^7.2.0",
    "cssnano": "^7.0.7",
    "html-minifier-terser": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-sort-media-queries": "^5.2.0",
    "rimraf": "^6.0.1",
    "sass": "^1.89.0",
    "terser": "^5.39.2",
    "typescript": "^5.8.3"
  }
}
